# 142


/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    ListNode *detectCycle(ListNode *head) {
        if(head==NULL || !head->next)
            return NULL;
        ListNode* slow = head->next;
        ListNode* fast = head->next->next;
        
        while(slow)
        {
            if(slow==fast)
                break;
            if(!fast || !fast->next)
                return NULL;
            slow = slow->next;
            fast = fast->next->next;
        }
        
        
        slow = head;
        while(slow)
        {
            if(slow==fast)
                return slow;
            slow = slow->next;
            fast  = fast->next;
        }
        
        return NULL;
        
        
    }
};
